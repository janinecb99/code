# This program was done with VS Code using Python extension.
# magic8bal.py
# This is a program to simulate the Magic 8 Ball.

#import files
import sys
import random

ans = True

while ans:
    question = input("Write a question for the Magic 8 Ball: (Press enter to exit.) ")

    answers = random.randint(1,21)

    if question == "":
        sys.exit()

    elif answers == 1:
        print("It is certain.")

    elif answers == 2:
        print("It is decidedly so.")

    elif answers == 3:
        print("Without a doubt.")

    elif answers == 4:
        print("Without a doubt.")

    elif answers == 5:
        print("Yes - definitely.")

    elif answers == 6:
        print("You may rely on it.")

    elif answers == 7:
        print("As I see it, yes.")

    elif answers == 8:
        print("Most likely.")

    elif answers == 9:
        print("Outlook good.")

    elif answers == 10:
        print("Yes.")

    elif answers == 11:
        print("Signs point to yes.")

    elif answers == 12:
        print("Reply hazy, try again.")

    elif answers == 13:
        print("Ask again later.")

    elif answers == 14:
        print("Better not tell you now.")

    elif answers == 15:
        print("Cannot predict now.")

    elif answers == 16:
        print("Concentrate and ask again.")

    elif answers == 17:
        print("Don't count on it.")

    elif answers == 18:
        print("My reply is no.")

    elif answers == 19:
        print("My sources say no.")

    elif answers == 20:
        print("Outlook not so good.")

    elif answers == 21:
        print("Very doubtful.")
